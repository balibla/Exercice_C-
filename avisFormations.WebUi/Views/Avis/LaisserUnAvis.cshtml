
@model avisFormations.WebUi.Models.LaisserUnAvisViewModel
@{
    ViewBag.Title = "Laisser Un Avis Sur La Formation";
}

<h2>Laisser un avis + @Model.formationName</h2>

<!-- add feedback start -->
@using (Html.BeginForm("SaveComment", "Avis", FormMethod.Post))
{
<div class="form-group">
    @*<label for="exampleFormControlInput1">Nom</label>
        <input type="text" name="name" class="form-control" id="exampleFormControlInput1">*@

   
    
    <!-- text area -->
    <label class="mt-3" for="exampleFormControlTextarea1">Votre Avis</label>
    <textarea name="description" class="form-control" id="exampleFormControlTextarea1"
              rows="3"></textarea>
</div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Example select</label>
        <select name="note" class="form-control" id="exampleFormControlSelect1">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
    </div>
    <input name="nSeo" type="hidden" value="@Model.formationNseo" />
    <input type="submit" class="btn btn-secondary" />
}

<!-- add feedback end -->